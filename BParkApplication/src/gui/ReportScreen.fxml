<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<BorderPane prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.ReportController">
    
    <top>
        <ToolBar>
         <HBox alignment="CENTER_LEFT" prefHeight="25.0" prefWidth="788.0" spacing="10.0">
            <children>
                  <Label text="Select Month:" />
                  <ComboBox fx:id="monthComboBox" />
                  <Label text="Year:" />
                  <ComboBox fx:id="yearComboBox" />
                  <Button onAction="#onLoadReportClicked" text="Load Report" />
                  <Button onAction="#onExportCsvClicked" text="Export CSV" />
               <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
               <Button fx:id="backBtn" alignment="CENTER" mnemonicParsing="false" onAction="#backToDialog" prefHeight="25.0" prefWidth="53.0" text="Back" />
            </children>
         </HBox>
        </ToolBar>
    </top>

    <center>
        <BarChart fx:id="barChart" prefHeight="500" prefWidth="700" title="Daily Parking Usage">
            <xAxis>
                <CategoryAxis label="Day of Month" />
            </xAxis>
            <yAxis>
                <NumberAxis label="Number of Parkings" />
            </yAxis>
        </BarChart>
    </center>
</BorderPane>
