<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="gui.ParkingTimingReportController" prefWidth="800" prefHeight="600">
    
    <top>
        <ToolBar>
            <Label text="Select Month:"/>
            <ComboBox fx:id="monthComboBox"/>
            <Label text="Year:"/>
            <ComboBox fx:id="yearComboBox"/>
            <Button text="Load Report" onAction="#onLoadReportClicked"/>
            <Button text="Export CSV" onAction="#onExportCsvClicked"/>
        </ToolBar>
    </top>

    <center>
        <VBox spacing="10" alignment="CENTER">
            <BarChart fx:id="barChart" title="Daily Extensions per Day" prefWidth="700" prefHeight="300">
                <xAxis>
                    <CategoryAxis label="Day of Month"/>
                </xAxis>
                <yAxis>
                    <NumberAxis label="Extensions"/>
                </yAxis>
            </BarChart>

            <PieChart fx:id="latePieChart" title="Late Users (Names)" prefWidth="700" prefHeight="250"/>
        </VBox>
    </center>
</BorderPane>
